<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="/static/assets/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/assets/admin.css" rel="stylesheet">
</head>
<body>

<div class="container">

<div class="row">
    <div class="col-md-5 center-block">

        <h2>Login:</h2>

        {% if Session.has('error') %}
            <p>{{ Session.get('error') }}</p>
        {% endif %}

        <form action="{{ route('auth.login') }}" method="post">

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-default">Login</button>

        </form>
    </div>
</div>

</div> <!-- /container -->

<script src="/static/assets/vendor/jquery/dist/jquery.min.js"></script>
<script src="/static/assets/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/static/assets/app.js"></script>
</body>
</html>