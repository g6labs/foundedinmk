{% include 'admin/header.twig' %}

<h1>Edit startup: {{ startup.name }}</h1>

<form role="form" method="post" action="{{ route('admin.startups.update', startup.id) }}" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value="{{ startup.name }}">
            </div>
            <div class="form-group">
                <label>Year founded</label>
                <input type="text" class="form-control" name="founded" value="{{ startup.founded }}">
            </div>
            <div class="form-group">
                <label>Url</label>
                <input type="text" class="form-control" name="url" value="{{ startup.url }}">
            </div>
            <div class="form-group">
                <label>Twitter</label>
                <input type="text" class="form-control" name="twitter" value="{{ startup.twitter }}">
            </div>
            <div class="form-group">
                <label>Contact name:</label>
                <input type="text" class="form-control" name="contact_name" value="{{ startup.contact_name }}">
            </div>
            <div class="form-group">
                <label>Contact email:</label>
                <input type="text" class="form-control" name="contact_email" value="{{ startup.contact_email }}">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="exampleInputFile">Logo</label>
                <p>Submitted logo: <a href="{{ startup.logo_url }}">{{ startup.logo_url }}</a></p>
                <input type="file" id="logo" name="logo">

                <img src="/static/logos/{{ startup.logo }}" id="img-preview-logo" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-default">Update</button>

</form>

{% include 'admin/footer.twig' %}